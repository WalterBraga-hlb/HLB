@{
    ViewBag.Title = "% Ovos Tricados p/ Semana";
}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        google.load("visualization", "1", { packages: ["corechart"] });
        google.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable(@(Html.Raw(ViewBag.ovosTrincadosPorSemana)));

            var options = {
                title: '% Ovos Trincados p/ Semana',
                hAxis: {gridlines: {count: @ViewBag.QtdeRegistrosEixoXOvosTrincadosSemana }},
                height: 400,
                chartArea: {width:'75%',height:'80%'},
                legend: {position: 'bottom'},
                trendlines: { 1: {} }
            };

            var chart = new google.visualization.LineChart(document.getElementById('chartOvosTrincadosSemana'));
            chart.draw(data, options);
        }
    </script>
<div>
    @if (ViewBag.QtdeRegistrosEixoXOvosTrincadosSemana != 0)
    {
    <div id="chartOvosTrincadosSemana" style="width: 100%; height: 100%;"></div>
    }
    else
    {
    <h3>
        % Ovos Trincados p/ Semana
        <br />
        Não existem dados para os parâmetros selecionados!
    </h3>
    }
</div>