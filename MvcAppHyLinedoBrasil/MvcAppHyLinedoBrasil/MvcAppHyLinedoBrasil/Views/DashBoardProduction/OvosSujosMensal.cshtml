@{
    ViewBag.Title = "% Ovos Sujos p/ Mês/Ano";
}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        google.load("visualization", "1", { packages: ["corechart"] });
        google.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable(@(Html.Raw(ViewBag.ovosSujosPorMesAno)));

            var options = {
                title: '% Ovos Sujos p/ Mês/Ano',
                hAxis: {gridlines: {count: @ViewBag.QtdeRegistrosEixoXOvosSujosMesAno }, format: 'yyyy/MM'},
                height: 400,
                chartArea: {width:'75%',height:'80%'},
                legend: {position: 'bottom'},
                trendlines: { 1: {} }
            };

            var chart = new google.visualization.LineChart(document.getElementById('chartOvosSujosMesAno'));
            chart.draw(data, options);
        }
    </script>
<div>
    @if (ViewBag.QtdeRegistrosEixoXOvosSujosMesAno != 0)
    {
    <div id="chartOvosSujosMesAno" style="width: 100%; height: 100%;"></div>
    }
    else
    {
    <h3>
        % Ovos Sujos p/ Mês/Ano
        <br />
        Não existem dados para os parâmetros selecionados!
    </h3>
    }
</div>