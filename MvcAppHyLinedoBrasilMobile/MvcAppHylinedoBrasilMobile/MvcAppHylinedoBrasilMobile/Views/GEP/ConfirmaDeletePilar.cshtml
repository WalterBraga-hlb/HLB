@{
    ViewBag.Title = "";

    MvcAppHylinedoBrasilMobile.Models.HLBAPPEntities hlbapp = new MvcAppHylinedoBrasilMobile.Models.HLBAPPEntities();

    int id = Convert.ToInt32(Session["idSelecionado"]);
    
    string descricao = "";
    MvcAppHylinedoBrasilMobile.Models.GEP_Pilar pilarObj =
        hlbapp.GEP_Pilar.Where(w => w.ID == id).FirstOrDefault();
    if (pilarObj != null)
    {
        descricao = pilarObj.Descricao;
    }
}

<br />
<h4 style="color:red;">@Html.Raw(ViewBag.Erro)</h4>
<h4 style="color:blue;">@Html.Raw(ViewBag.Mensagem)</h4>

<h1 style="color:red; background-color:Yellow">
        * CONFIRMA A EXCLUSÃO DO PILAR @(descricao)???
</h1>
<br />
@using (Html.BeginForm("ListaPilares", "GEP", FormMethod.Post))
{
    <input type="submit" value="Não" />
}

@using (Html.BeginForm("DeletePilar", "GEP", FormMethod.Post))
{
    <input type="submit" value="Sim" />
}
